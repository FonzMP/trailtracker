<% @trails.each do |trail| %>
  <strong>Name: </strong><%= trail.name %>
  <br>
  <strong>Length: </strong><%= trail.length %> miles
  <br>
  <strong>Contributed by: </strong><%= link_to trail.find_user.username, user_trails_path(trail.find_user) %>
  <br>
  <%= link_to "View #{trail.name}", trail_path(trail) %>
  <br>
  <br>
<% end %>