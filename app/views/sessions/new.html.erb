<h1>Please log in with your username</h1>

<%= form_tag '/login' do %>
  <%= label_tag "Username: " %>
  <%= text_field_tag :username %>
  <br>
  <br>
  <%= label_tag "Password: " %>
  <%= password_field_tag :password %>
  <br>
  <br>
  <%= submit_tag "Login" %>
<% end %>

<br>
<br>
<%= link_to('Log in with Facebook!', '/auth/facebook') %>