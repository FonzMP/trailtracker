<h1>Please log in with your username</h1>

<% if @message %>
  <h3>Sorry, we experienced the following errors!</h3>
  <% @message.each do |msg| %>
    <%= msg %>
    <br>
    <br>
  <% end %>
<% end %>

<%= form_tag '/login' do %>
  <%= label_tag "Username: " %>
  <%= text_field_tag :username %>
  <br>
  <br>
  <%= label_tag "Password: " %>
  <%= password_field_tag :password %>
  <br>
  <br>
  <%= submit_tag "Login" %>
<% end %>

