<h1>Please log in with your username</h1>

<%= render 'application/message' %>

<% if @log %>
    <% @log.each do |log| %>
      <%= log %>
    <% end %>
    <br>
    <br>
<% end %>

<%= form_tag '/login' do %>
  <%= label_tag "Username: " %>
  <%= text_field_tag :username %>
  <br>
  <br>
  <%= label_tag "Password: " %>
  <%= password_field_tag :password %>
  <br>
  <br>
  <%= submit_tag "Login" %>
<% end %>

<br>
<br>
<p><%= link_to('Log in with Facebook!', '/auth/facebook') %></p>