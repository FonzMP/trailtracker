<% if !logged_in? %>
  <p class="nav_link"><%= link_to "Log In", login_path %></p>
  <p class="nav_link"><%= link_to "Sign Up!", new_user_path %></p>
  <p class="nav_link"><%= link_to('Sign Up/Log in with Facebook!', '/auth/facebook') %></p>
<% else %>
<p class="nav_link"><%= link_to "Log Out", logout_path, method: :delete %></p>
<p class="nav_link"><%= link_to "Your Profile Page", user_path(@current_user) %></p>
<p class="nav_link"><%= link_to "View all trails", trails_path %></p>
<p class="nav_link"><%= link_to "View all Users", users_path %></p>
<% end %>
<p class="nav_link"><%= link_to "Home", root_path %></p>


<% if @message %>
  <% @message.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>